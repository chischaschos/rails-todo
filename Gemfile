source 'https://rubygems.org'

gem 'rails', '3.2.3'
gem 'jquery-rails'

group :production do
  gem 'pg'
end

group :assets do
  gem "twitter-bootstrap-rails"
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'haml'
end

group :test, :development do
  gem 'database_cleaner'
  gem "rspec-rails"
  gem "capybara"
  gem 'launchy'
  gem 'guard-rspec'
  gem 'sqlite3'
end

group :development do
  gem 'heroku'
end

